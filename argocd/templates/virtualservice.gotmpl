apiVersion: networking.istio.io/v1beta1
kind: VirtualService
metadata:
  name: vault-{{ .env }}
  namespace: vault-{{ .env }}
spec:
  hosts:
    - {{ .host }}
  gateways:
    - istio-system/vault-gateway
  http:
    - route:
        - destination:
            host: vault.vault-{{ .env }}.svc.cluster.local
            port:
              number: 8200
